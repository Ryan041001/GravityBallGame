<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/select_difficulty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择难度开始游戏:"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:fontFamily="sans-serif"
        android:layout_marginBottom="16dp"/>

    <RadioGroup
        android:id="@+id/difficulty_radio_group"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_easy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:buttonTint="@color/button_primary"
            android:checked="true"
            android:text="简单"
            android:textColor="@color/text_primary" />

        <RadioButton
            android:id="@+id/radio_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            android:buttonTint="@color/button_secondary"
            android:text="中等"
            android:textColor="@color/text_primary" />

        <RadioButton
            android:id="@+id/radio_hard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/button_challenge"
            android:text="困难"
            android:textColor="@color/text_primary" />
    </RadioGroup>

</LinearLayout> 