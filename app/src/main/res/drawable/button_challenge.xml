<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/button_challenge_dark"
                android:endColor="@color/button_challenge"
                android:angle="90" />
            <corners android:radius="12dp" />
            <stroke android:width="2dp" android:color="@color/button_challenge_dark" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="#CCCCCC" />
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/button_challenge"
                android:endColor="@color/button_challenge_dark"
                android:angle="90" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="@color/button_challenge_dark" />
        </shape>
    </item>
</selector>