<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 外阴影 (底部右侧) -->
    <item
        android:left="4dp"
        android:top="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- 内阴影 (顶部左侧高光) -->
    <item
        android:right="4dp"
        android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- 主按钮 -->
    <item
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <selector>
            <item android:state_pressed="true">
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#FCE4EC"
                        android:endColor="#F8BBD9"
                        android:angle="135" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            <item android:state_enabled="false">
                <shape android:shape="rectangle">
                    <solid android:color="#F5F5F5" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                        android:startColor="#FDE7F3"
                        android:endColor="#F9C2D7"
                        android:angle="135" />
                    <corners android:radius="18dp" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>